{
  "name": "@pixelmakers/elements",
  "version": "0.1.8",
  "type": "module",
  "description": "A collection of custom web components by PixelMakers",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./phone-input": {
      "import": "./dist/phone-input.js",
      "types": "./dist/phone-input.d.ts"
    },
    "./lightbox": {
      "import": "./dist/lightbox.js",
      "types": "./dist/lightbox.d.ts"
    },
    "./accordion": {
      "import": "./dist/accordion.js",
      "types": "./dist/accordion.d.ts"
    },
    "./tabs": {
      "import": "./dist/tabs.js",
      "types": "./dist/tabs.d.ts"
    },
    "./video": {
      "import": "./dist/video.js",
      "types": "./dist/video.d.ts"
    },
    "./number-input": {
      "import": "./dist/number-input.js",
      "types": "./dist/number-input.d.ts"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "web-components",
    "custom-elements",
    "phone-input"
  ],
  "author": "PixelMakers",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.15.23",
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4"
  },
  "dependencies": {
    "intl-tel-input": "^25.3.1",
    "medium-zoom": "^1.1.0",
    "swiper": "^11.2.8"
  },
  "peerDependencies": {
    "intl-tel-input": "^25.3.1"
  }
}
